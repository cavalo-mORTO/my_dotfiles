## Receive options.
set imap_user = "miguelmig17@gmail.com"
set imap_pass = $my_pass_1
set folder = "imaps://imap.gmail.com"
set spoolfile = "+INBOX"
set record="+[Gmail]/Correio enviado"
set postponed="+[Gmail]/Rascunhos"
set mbox="+[Gmail]/Todo o correio"
set trash = "+[Gmail]/Caixote do Lixo"

## Send options.
set smtp_url = "smtp://miguelmig17@smtp.gmail.com"
set smtp_pass = $my_pass_1
set from = "miguelmig17@gmail.com"
set hostname="gmail.com"
set use_from = yes

# Connection options
set ssl_force_tls = yes
unset ssl_starttls

## Hook -- IMPORTANT!
account-hook miguelmig17* "set imap_user=miguelmig17@gmail.com imap_pass=$my_pass_1"
mailboxes +inbox
