## Receive options.
set imap_user = "miguel_mig21@hotmail.com"
set imap_pass = $my_pass_2
set folder = "imaps://Outlook.office365.com"
set spoolfile = "+INBOX"
set record="+[Gmail]/Correio enviado"
set postponed="+[Gmail]/Rascunhos"
set mbox="+[Gmail]/Todo o correio"
set trash = "+[Gmail]/Caixote do Lixo"

## Send options.
set smtp_url = "smtp://miguel_mig21@SMTP.office365.com"
set smtp_pass = $my_pass_2
set from = "miguel_mig21@hotmail.com"
set hostname="hotmail.com"
set use_from = yes

# Connection options
set ssl_force_tls = yes
unset ssl_starttls

## Hook -- IMPORTANT!
account-hook miguel_mig21* "set imap_user=miguel_mig21@hotmail.com imap_pass=$my_pass_2"
mailboxes +inbox
