#!/bin/sh

wmname LG3D

## Coloring
FOREGROUND=$(xrdb -query | grep 'foreground:'| awk '{print $NF}')
BACKGROUND=$(xrdb -query | grep 'background:'| awk '{print $NF}')
BLACK=$(xrdb -query | grep 'color0:'| awk '{print $NF}')
RED=$(xrdb -query | grep 'color1:'| awk '{print $NF}')
GREEN=$(xrdb -query | grep 'color2:'| awk '{print $NF}')
YELLOW=$(xrdb -query | grep 'color3:'| awk '{print $NF}')
BLUE=$(xrdb -query | grep 'color4:'| awk '{print $NF}')
MAGENTA=$(xrdb -query | grep 'color5:'| awk '{print $NF}')
CYAN=$(xrdb -query | grep 'color6:'| awk '{print $NF}')
WHITE=$(xrdb -query | grep 'color7:'| awk '{print $NF}')

bspc config normal_border_color "$BLACK"
bspc config active_border_color "$MAGENTA"
bspc config focused_border_color "$MAGENTA"
bspc config presel_feedback_color "$RED" 

bspc monitor LVDS1 -d 1 2 3 4

# make window focus follow mouse
bspc config focus_follows_pointer true
bspc config click_to_focus true

# for spiral mode
bspc config automatic_scheme spiral

bspc config border_width	2
bspc config window_gap		3

bspc config split_ratio          0.52
bspc config borderless_monocle   true
bspc config gapless_monocle      true

bspc config ignore_ewmh_focus true
bspc config ignore_ewmh_fullscreen all
bspc config honor_size_hints false
bspc config remove_unplugged_monitors true

bspc rule -a ffplay desktop='^7' state=fullscreen follow=on
bspc rule -a helipad state=pseudo_tiled rectangle=1150x470+0+0 sticky=on hidden=on
bspc rule -a Brave state=floating rectangle=900x470+0+0
bspc rule -a ranger state=pseudo_tiled rectangle=1280x720+0+0 sticky=on
bspc rule -a mpv state=floating follow=on center=true rectangle=854x480+0+0
bspc rule -a Gimp-2.10 state=floating follow=on
bspc rule -a jetbrains-studio state=floating
bspc rule -a Yad state=floating rectangle=300x200+1060+22
