#!/bin/sh

main ()
{
	local background=$(xrdb -query | grep "background" | cut -f2 | head -1)
	local foreground=$(xrdb -query | grep "foreground" | cut -f2 | head -1)
	local color0=$(xrdb -query | grep "color0" | cut -f2 | head -1)
	local color1=$(xrdb -query | grep "color1" | cut -f2 | head -1)
	local color2=$(xrdb -query | grep "color2" | cut -f2 | head -1)
	local color3=$(xrdb -query | grep "color3" | cut -f2 | head -1)
	local color4=$(xrdb -query | grep "color4" | cut -f2 | head -1)
	local color5=$(xrdb -query | grep "color5" | cut -f2 | head -1)
	local color6=$(xrdb -query | grep "color6" | cut -f2 | head -1)
	local color7=$(xrdb -query | grep "color7" | cut -f2 | head -1)
	local color8=$(xrdb -query | grep "color8" | cut -f2 | head -1)
	local color9=$(xrdb -query | grep "color9" | cut -f2 | head -1)
	local color10=$(xrdb -query | grep "color10" | cut -f2 | head -1)
	local color11=$(xrdb -query | grep "color11" | cut -f2 | head -1)
	local color12=$(xrdb -query | grep "color12" | cut -f2 | head -1)
	local color13=$(xrdb -query | grep "color13" | cut -f2 | head -1)
	local color14=$(xrdb -query | grep "color14" | cut -f2 | head -1)
	local color15=$(xrdb -query | grep "color15" | cut -f2 | head -1)

	bspc config normal_border_color $color8
	bspc config active_border_color $color9
	bspc config focused_border_color $color9
